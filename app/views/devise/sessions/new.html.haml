.login-form
  = form_tag(session_path(:user)) do
    %fieldset
      = image_tag("cryptopussy.svg", class: 'logo')
      .form-group
        = text_field_tag 'user[username]', nil, id: 'username', placeholder: t(:username), class: 'form-control'
        = password_field_tag 'user[password]', nil, id: 'password', placeholder: t(:password), class: 'form-control'
      = submit_tag t('.submit'), class: 'btn btn-primary'
.version-info
  = version_info
